@model ProjectMembersViewModel

@{
	ViewData["Title"] = "Assign Members";
}

<div class="container">

	<h2>Assign Members for</h2>
	<div class="row">
		<div class="col-md-6">

			<h3>@Model.Project.Name</h3>

			<div class="card">
				<div class="card-header">
					<label asp-for="PossibleMembers" class="control-label">Assign team members for project</label>
				</div>

				<div class="card-body">
					<form asp-controller="Projects" asp-action="AssignMembers" method="post">
						<input type="hidden" asp-for="Project.Id"/>

						<div class="col-12 mb-3">
							<select required asp-for="@Model.Members" class="form-select" asp-items="@Model.PossibleMembers" multiple="multiple"></select>
						</div>

						<div class="form-group">
							<div class="col-lg-offset-2 col-lg-10">
								<input type="submit" class="btn alert-primary" value="Assign Users" />
								<a asp-controller="Projects" asp-action="Details" asp-route-id="@Model.Project.Id"
								class="btn alert-danger">Cancel</a>
							</div>
						</div>

					</form>
				</div>
			</div>
		</div>
	</div>
</div>