@model AssignDeveloperViewModel

<div class="container">
	<h2>Assign Developer</h2>
	<div class="row">
		<div class="col-md-6">
			
			<h3>@Model.Ticket.Title</h3>
			<a asp-controller="Projects" asp-action="Details" asp-route-id="@Model.Ticket.ProjectId" style="font-size:small">View Project</a>

			<div class="card">

				<div class="card-header">
					<label class="control-label">Assign Developer</label>
				</div>

				<div class="card-body">
					<form asp-action="AssignDeveloper" asp-controller="Tickets" method="post">
						<input type="hidden" asp-for="Ticket.Id" />
						<p>Description: @Model.Ticket.Description</p>

						<div class="form-group">
							<label class="col-form-label">Select Developer</label>
							<select required asp-for="DeveloperId" asp-items="@Model.DeveloperList">
								<option></option>
							</select>
						</div>

						<div class="form-group mt-3">
							<input type="submit" value="Assign" class="btn btn-primary"/>
						</div>

					</form>
				</div>

			</div>
		</div>
	</div>
	<div>
		<a asp-action="UnassignedTickets" asp-controller="Tickets" class="btn btn-outline">Back</a>
	</div>

</div>